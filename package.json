{
  "name": "nestjs-api",
  "version": "0.1.1",
  "description": "",
  "author": {
    "name": "toimc",
    "email": "brian@toimc.com",
    "url": "https://github.com/toimc"
  },
  "private": true,
  "homepage": "https://github.com/toimc-team/nestjs9-prisma-jwt-template",
  "license": "MIT",
  "scripts": {
    "db:rm": "docker compose rm dev-db -s -f -v",
    "db:up": "docker compose up dev-db -d && sleep 5",
    "db:restart": "npm run db:rm && npm run db:up && npm run db:deploy",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:rm:test": "docker compose rm test-db -s -f -v",
    "db:up:test": "docker compose up test-db -d && sleep 5",
    "db:restart:test": "npm run db:rm:test && npm run db:up:test && npm run db:deploy:test",
    "db:deploy:test": "dotenv -e ./env.test -- prisma migrate deploy",
    "db:studio:test": "dotenv -e ./env.test -- prisma studio",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:repl": "npm run start -- --entryFile repl",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "npm run db:restart:test",
    "test:e2e": "dotenv -e ./env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "preinstall": "prisma generate",
    "log": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/swagger": "^7.3.0",
    "@prisma/client": "^5.9.1",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.2",
    "@types/express": "^4.17.14",
    "@types/jest": "29.5.12",
    "@types/node": "^20.11.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "pactum": "^3.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.0",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
